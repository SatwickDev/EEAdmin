{
  "mcpServers": {
    "eeai-tools": {
      "command": "python",
      "args": ["-m", "appv2.mcp_server", "--mode", "stdio"],
      "env": {
        "PYTHONPATH": "/mnt/c/Users/AIAdmin/Desktop/EEAIAdmin"
      }
    }
  },
  "tools": [
